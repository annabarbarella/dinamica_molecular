from pylab import*


distx = np.arange(0.1,10,0.1)
C = 0.1
sig = 1.
a = 3/sig
disty = 0.
distqy = np.sqrt(2)/2
distqx = np.sqrt(2)/2
C2 =  10e-8
for i in range(0,3):
    C = np.array([0.01,0.1,0.5,1.0,10.0])
    C = C[i]
    R2 = distx**2 + disty**2
    fx = -(distqx*distx + distqy*disty)*C*a*distx*exp(-a*(sqrt(R2)-sig))/(R2)**(3./2)-2*(distqx)*distx + (distqy*disty* C *distx*exp(-a*(sqrt(R2))-sig))/(R2)**2 +C*distqx*exp(-a*(sqrt(R2)-sig))/(R2) #+ 12*(1./sqrt(R2)**7.)*distx

    fx2 =  C2*12*(1./sqrt(R2)**7.)*distx

    plot(distx, fx,'k.',ms=1.)
    plot(distx, fx2,'g.',ms=1.)
    plot(distx, fx2+fx,'r.',ms=1.)
    plt.show()
    exit()
